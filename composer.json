{
  "name": "nayikidev/laravel-validate-xss",
  "description": "Laravel validation rule to prevent JavaScript or dangerous HTML tags.",
  "type": "library",
  "license": "MIT",
  "autoload": {
      "psr-4": {
          "NayikiDev\\LaravelValidateXss\\": "src/"
      }
  },
  "require": {
      "php": ">=8.1",
      "illuminate/support": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
        "phpunit/phpunit": "^11.0 || ^12.0",
        "orchestra/testbench": "^10.0"
  },
  "extra": {
      "laravel": {
          "providers": [
              "NayikiDev\\LaravelValidateXss\\LaravelValidateXssServiceProvider"
          ]
      }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}